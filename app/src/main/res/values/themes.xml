    <style name="Base.Theme.PROAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
            <item name="colorPrimary">@color/pink_800</item>
            <item name="colorPrimaryVariant">@color/pink_800_dark</item>
            <item name="colorOnPrimary">@color/white</item>
